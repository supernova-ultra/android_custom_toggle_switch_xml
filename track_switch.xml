<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Yoqilgan (ON) -->
    <item android:state_checked="true">
        <layer-list>
            <item
                android:width="48dp"
                android:height="28dp"
                android:gravity="center_vertical"
                android:top="2dp" android:bottom="2dp">
                <shape>
                    <corners android:radius="13dp"/>
                    <gradient android:startColor="@color/blue_light" android:endColor="@color/blue_dark" android:angle="270"/>
                    <stroke android:width="1dp" android:color="@color/blue_dark"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Oâ€˜chirilgan (OFF) -->
    <item>
        <layer-list>
            <item
                android:width="48dp"
                android:height="28dp"
                android:gravity="center_vertical"
                android:top="2dp" android:bottom="2dp">
                <shape>
                    <corners android:radius="13dp"/>
                    <gradient android:startColor="@color/light_gray" android:endColor="@color/dark_gray" android:angle="270"/>
                    <stroke android:width="1dp" android:color="@color/dark_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

